# Database Configuration
DATABASE_URL=postgres://tradecaptain_user:tradecaptain_pass@localhost:5432/tradecaptain?sslmode=disable
TIMESCALE_URL=postgres://timescale_user:timescale_pass@localhost:5433/timeseries_data?sslmode=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# API Keys (Free Tier)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
IEX_CLOUD_API_KEY=your_iex_cloud_key_here
NEWS_API_KEY=your_news_api_key_here
FRED_API_KEY=your_fred_api_key_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=8080
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_PER_SECOND=100
MAX_REQUESTS_PER_SECOND=10

# Data Collection Intervals
MARKET_DATA_INTERVAL=30s
NEWS_INTERVAL=5m
ECONOMIC_DATA_INTERVAL=1h

# Symbols to Track (comma-separated)
STOCK_SYMBOLS=AAPL,GOOGL,MSFT,TSLA,AMZN,META,NFLX,NVDA,AMD,INTC
CRYPTO_SYMBOLS=BTC,ETH,ADA,DOT,SOL,MATIC,AVAX,ATOM

# Frontend Configuration
VITE_API_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080

# Optional: Premium Data Provider Keys (for future upgrades)
# REFINITIV_API_KEY=your_refinitiv_key
# BLOOMBERG_API_KEY=your_bloomberg_api_key
# FACTSET_API_KEY=your_factset_key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true